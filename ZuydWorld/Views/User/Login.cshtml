@{
    ViewData["Title"] = "Login";
    var error = TempData["Error"] as string;
}

@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding:20px;"> @error</h2>


}
<body class="image">
    <section>
        <div class="form-box">
            <div class="form-value">
                <form action="" method="post">
                    <h2>Login</h2>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input name="gebruikersnaamofemail" value="@ViewBag.email" required>
                        <label for="">Email of Gebruikersnaam</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" name="wachtwoord" value=" @ViewBag.wachtwoord" required>
                        <label for="">Password</label>
                    </div>
                    <div class="forget">
                        <input type="checkbox" id="myCheckbox1" name="myCheckbox" value="true" checked="@ViewBag.wachtwoords">
                        <label><span>Remember Me</span></label>
                        <label><span><a href="#">Forget Password</a></span></label>
                    </div>
                    <button>Log in</button>
                    <div class="register">
                        <p>Don't have a account? <a href="@Url.Action("Registration")"> Register</a></p>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
