<!DOCTYPE html>
<html>
<head>
    <title>Mijn Spelletjeswebsite</title>
    <style>
        .arrow {
            position: fixed;
            top: calc(50% - 20px);
            width: 40px;
            height: 40px;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            font-size: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1;
        }

        .arrow-left {
            left: 260px;
        }

        .arrow-right {
            right: 10px;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .category {
            background-color: white;
            margin-bottom: 15px;
            margin-left: 20px;
            margin-right: 20px;
            padding: 10px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding-top: 10px;
            border-radius: 10px;
        }

            .category:hover,
            .category.home:hover {
                background-color: #6E86FF;
                color: #fff;
            }

            .category.home {
                background-color: #6266a5;
                color: white;
                padding-top: 10px;
            }

        .content {
            margin-left: 300px;
            padding: 10px;
        }

        .empty-space {
            height: 20px;
        }

        .game {
            width: calc(25% - 20px);
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
            cursor: pointer;
            border-radius: 10px;
            border: 5px solid #000;
            background-color: #EBEBEB;
        }

        .game-detailshover,
        .game-details {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 14px;
            padding: 5px 10px;
        }

        .game-detailshover {
            background-color: #c8e0ff;
            color: black;
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }

        .game-details {
            background-color: #a3a3a3;
            color: White;
            font-weight: bold;
        }

        .favorite {
            position: absolute;
            top: -8px;
            right: 25px;
            width: 20px;
            height: 20px;
            background-color: transparent;
            border: none;
            cursor: pointer;
        }

            .favorite:before {
                content: "\2606";
                color: #fff;
                font-size: 40px;
            }

            .favorite:hover:before {
                color: yellow;
            }

            .favorite.active:before {
                content: "\2605";
                color: yellow;
            }

        .game img {
            width: 100%;
            height: 81%;
            object-fit: cover;
        }

        .game:hover img {
            filter: brightness(50%);
        }

        .game:hover {
            background-color: #767676;
        }

            .game:hover .game-detailshover {
                transform: translateY(0);
            }

        .game-name,
        .like-percentage {
            margin: 0;
        }

        .game-row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .like-percentage {
            background-color: #a1bbff;
            padding: 5px 10px;
        }

        .sidebar {
            background-color: #7cbcff;
            color: #101010;
            padding: 10px;
            position: fixed;
            top: 60px;
            left: 0;
            width: 250px;
            height: calc(100vh - 50px);
            overflow-y: auto;
            z-index: 0;
        }

        #LogoRectangle {
            position: absolute;
            left: 0;
            top: 0;
            width: 265px;
            height: 77px;
            background-color: #4C7DDD;
            border-bottom-right-radius: 10px;
            z-index: 2;
        }
    </style>
</head>
<body>
    <div id="LogoRectangle"></div>
    <div class="header">
        <!-- Inhoud van de bovenste balk -->
    </div>
    <div class="sidebar">
        <div class="empty-space"></div>
        <div class="category home">Home</div>
        <div class="category">Random Game</div>
        <div class="category">New Games</div>
        <div class="category">Action</div>
        <div class="category">Adventure</div>
        <div class="category">Puzzle</div>
        <div class="category">Sport</div>
        <div class="category">Multiplayer</div>
        <div class="category">Trivia</div>
        <div class="category">Platformer</div>
        <div class="category">Board games</div>
        <div class="category">3D</div>
        <div class="category">Retro</div>
        <!-- Voeg hier meer categorieën toe -->
    </div>
    <div class="arrow arrow-left">&larr;</div>
    <div class="arrow arrow-right">&rarr;</div>

    <div class="content">
        <div class="game-row">
            <div class="game">
                <img src="https://github.com/mhjdemmers/ZuydWorld/blob/FrontEnd/checkers.jpg?raw=true">
                <div class="game-details">
                    <span class="game-name">Checkers</span>
                    <span class="like-percentage">85% likes</span>
                </div>
                <button class="favorite"></button>
            </div>
            <div class="game">
                <img src="https://github.com/mhjdemmers/ZuydWorld/blob/FrontEnd/ttt.png?raw=true">
                <div class="game-details">
                    <span class="game-name">Tic Tac Toe</span>
                    <span class="like-percentage">85% likes</span>
                </div>
                <button class="favorite"></button>
            </div>
            <div class="game">
                <img src="https://github.com/mhjdemmers/ZuydWorld/blob/FrontEnd/pacman.jpg?raw=true">
                <div class="game-details">
                    <span class="game-name">Pac Man</span>
                    <span class="like-percentage">85% likes</span>
                </div>
                <button class="favorite"></button>
            </div>
            <div class="game">
                <img src="https://github.com/mhjdemmers/ZuydWorld/blob/FrontEnd/tetris.jpg?raw=true">
                <div class="game-details">
                    <span class="game-name">Tetris</span>
                    <span class="like-percentage">85% likes</span>
                </div>
                <button class="favorite"></button>
            </div>
        </div>
        <!-- Voeg hier meer game-rijen toe -->
    </div>

    <script>
        const favorites = document.querySelectorAll('.favorite');
        favorites.forEach((favorite) => {
            favorite.addEventListener('click', () => {
                favorite.classList.toggle('active');
            });
        });
    </script>
</body>
</html>
